<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "English", locale:"en" %>
    <%= link_to "Vietnamese", locale:"vi" %>
    <%= link_to t("app.title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_pages.home.title"),  root_path %></li>
        <li><%= link_to t("static_pages.help.title"),  help_path %></li>
        <% if logged_in? %> 
          <li><%= link_to t("header.users"), "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t("header.account")%><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("header.profile"), current_user %></li>
              <li><%= link_to t("header.settings"), '#' %></li>
              <li class="divider"></li>
              <li> <%= link_to t("app.log out"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
        <li><%= link_to t("app.log_in"),  login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
